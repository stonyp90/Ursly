# Ursly Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================================================
# Keycloak Configuration
# ============================================================================
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=agent-orchestrator
KEYCLOAK_CLIENT_ID=agent-api
KEYCLOAK_CLIENT_SECRET=your-client-secret-here

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGODB_URI=mongodb://localhost:27017/agent-orchestrator

# ============================================================================
# Ollama Configuration (Local LLM)
# ============================================================================
OLLAMA_URL=http://localhost:11434

# ============================================================================
# Agent Token Configuration
# ============================================================================
# Must be at least 32 characters for security
AGENT_TOKEN_SECRET=your-secret-key-minimum-32-characters-long
AGENT_TOKEN_EXPIRY=300

# ============================================================================
# gRPC Configuration
# ============================================================================
GRPC_SERVICE_URL=localhost:50051
GRPC_PORT=50051

# ============================================================================
# API Configuration
# ============================================================================
PORT=3000
NODE_ENV=development
CORS_ORIGIN=http://localhost:4200,http://localhost:1420

# ============================================================================
# Frontend Configuration (Vite)
# ============================================================================
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_KEYCLOAK_URL=http://localhost:8080
VITE_KEYCLOAK_REALM=agent-orchestrator
VITE_KEYCLOAK_CLIENT_ID=agent-web
